    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        app:layout_constraintBottom_toTopOf="@+id/btnSiguiente">


        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/inputUser"
            android:inputType="text"
            android:hint="Username"
            android:textColor="#999999"
            android:layout_width="match_parent"
            android:layout_marginTop="32dp"
            android:layout_marginLeft="48dp"
            android:layout_marginRight="48dp"
            android:layout_height="65dp"
            android:background="@drawable/input_background"
            android:contentDescription="Campo para nombre de usuario"
            android:elevation="15dp"
            android:padding="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.496"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView"
            tools:ignore="MissingConstraints" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/inputPass1"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_marginLeft="48dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="48dp"
            android:background="@drawable/input_background"
            android:elevation="15dp"
            android:inputType="text"
            android:padding="8dp"
            android:hint="Password"
            android:textAlignment="textStart"
            android:textColor="#999999"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.52"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/inputUser"
            tools:ignore="MissingConstraints" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/inputPass2"
            android:inputType="text"
            android:hint="Password"
            android:textColor="#999999"
            android:textAlignment="textStart"
            android:layout_width="match_parent"
            android:layout_marginLeft="48dp"
            android:layout_marginRight="48dp"
            android:layout_marginBottom="32dp"

            android:layout_height="65dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/input_background"
            android:elevation="15dp"
            android:padding="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.503"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/inputPass1"
            tools:ignore="MissingConstraints" />

    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnSiguiente"
        android:layout_width="match_parent"
        android:layout_marginLeft="48dp"
        android:layout_marginRight="48dp"
        android:layout_height="55dp"
        android:layout_marginBottom="80dp"
        android:background="@drawable/button_background"
        android:contentDescription="boton Aceptar"
        android:text="Siguiente"
        android:textColor="#222222"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="123dp"
        android:layout_height="84dp"
        android:layout_marginTop="80dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/header2" />

</androidx.constraintlayout.widget.ConstraintLayout>