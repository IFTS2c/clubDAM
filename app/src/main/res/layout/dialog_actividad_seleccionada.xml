<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="450dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:background="#E0D6CD"
    android:gravity="center_horizontal">

    <ImageView
        android:id="@+id/ivDialogActSelect"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:background="@color/black" />

    <TextView
        android:id="@+id/TitleActSelec"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_marginTop="48dp"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        tools:text="Boulder"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="130dp"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/actDias"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:textSize="20sp"
            tools:text="Lunes - MiÃ©rcoles - Viernes" />

        <TextView
            android:id="@+id/actHorario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textSize="20sp"
            tools:text="10 : 00 hs" />

        <TextView
            android:id="@+id/actPrecioSocio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:textSize="20sp"
            tools:text="Socios:  $ 4000.00" />

        <TextView
            android:id="@+id/actPrecioNoSocio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textSize="20sp"
            tools:text="No Socios:  $ 1500.00" />

        <TextView
            android:id="@+id/actCupo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:textSize="20sp"
            tools:text="Cupos disponibles 10" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:layout_gravity="bottom"
        android:padding="6dp">

        <TextView
            android:id="@+id/btnAtras"
            android:layout_width="142dp"
            android:layout_height="match_parent"
            android:background="@color/c_boulder"
            android:text="Atras"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:paddingVertical="4dp"
            android:textAlignment="center"/>

        <TextView
            android:id="@+id/btnAceptar"
            android:layout_width="142dp"
            android:layout_height="match_parent"
            android:background="@color/c_boulder"
            android:layout_marginLeft="6dp"
            android:text="Aceptar"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:paddingVertical="4dp"
            android:textAlignment="center" />

    </LinearLayout>


</FrameLayout>