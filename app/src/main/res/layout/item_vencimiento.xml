<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="74dp"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardCornerRadius="12dp"
    android:layout_marginVertical="8dp"
    android:layout_marginHorizontal="8dp"
    >
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintCard"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/c_fondo_ppal_claro"
        android:padding="8dp"
        >

        <TextView
            android:id="@+id/tvNombre"
            android:layout_width="match_parent"
            android:layout_height="28dp"
            android:gravity="center_vertical"
            android:textSize="18sp"
            android:layout_marginHorizontal="4dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Martin Rodriguez Claverdastacon" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="32dp"
            app:layout_constraintTop_toBottomOf="@+id/tvNombre"
            tools:layout_editor_absoluteX="8dp"
            android:background="@color/c_fondo_dialog">

            <TextView
                android:id="@+id/tvVto"
                android:layout_width="130dp"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="4dp"
                android:gravity="center_vertical"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="parent"
                tools:text="Vto. 2024-03-01" />

            <TextView
                android:id="@+id/tvmonto"
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="4dp"
                android:gravity="center_vertical"
                android:textSize="18sp"
                app:layout_constraintStart_toEndOf="@+id/tvVto"
                tools:text="$ 4000,00" />

            <TextView
                android:id="@+id/tvTel"
                android:layout_width="104dp"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="4dp"
                android:gravity="center"
                android:textSize="16sp"

                app:layout_constraintStart_toEndOf="@+id/tvmonto"
                tools:text="1176653423" />

            <ImageView
                android:layout_width="24dp"
                android:layout_height="18dp"
                android:background="@drawable/email_icon"
                android:gravity="center"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/tvTel"
                app:layout_constraintTop_toTopOf="parent" />



        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>